<%- include('../comunes/cabecera')%>

<div class='container'>
    <%const existeMensaje = typeof datos.mensaje !== 'undefined'%>
    <%if(existeMensaje){%>
    <div class="alert alert-success" role="alert">
        <%=datos.mensaje%>
    </div>
    <%}%>
    <h1>Lista</h1>
    <form action="/usuario/lista-usuarios" method="get">
        <div class="mb-3">
            <label for="busqueda" class="form-label"> Busqueda </label>
            <input placeholder="Ej: Adri"
                   type="text"
                   name="busqueda"
                   class="form-control"
                   id="busqueda"
                   aria-describedby="ayudaBusqueda">
            <div id="ayudaBusqueda" class="form-text"> Puede buscar por nombre o apellido. </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Buscar</button>
    </form>
    <div>
        <a href="/usuario/vista-crear">
            <button class="btn btn-success">
                Crear Nuevo Usuario
            </button>
        </a>

    </div>
    <table class="table text-center" >
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
            <% datos.usuarios.forEach((objeto)=> {%>
                <tr>
                    <th><%= objeto.id%></th>
                    <th><%= objeto.nombre%></th>
                    <th><%= objeto.apellido%></th>
                    <form action='/usuario/eliminar-usuario/<%= objeto.id%>' method="post">
                        <th><button class='btn btn-danger'>Eliminar</button></th>
                    </form>

                </tr>

            <%})%>
       </tbody>
    </table>
</div>
<%- include('../comunes/footer')%>